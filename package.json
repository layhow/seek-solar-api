{
    "name": "seek-solar-api",
    "description": "API for SEEK Solar",
    "version": "0.0.1",
    "private": true,
    "dependencies": {
        "ajv": "^5.3.0",
        "aws-sdk": "^2.422.0",
        "body-parser": "^1.18.2",
        "convict": "^4.0.1",
        "dotenv": "^7.0.0",
        "dynamodb-geo": "^0.4.0",
        "express": "^4.16.2",
        "helmet": "^3.12.0",
        "morgan": "^1.9.0",
        "mysql2": "^1.4.2",
        "nodemon": "^1.12.1",
        "request-promise": "^4.2.2"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-plugin-istanbul": "^4.1.5",
        "babel-preset-env": "^1.6.0",
        "babel-register": "^6.26.0",
        "chai": "^4.1.2",
        "cross-env": "^5.1.1",
        "mocha": "5.0.0",
        "nyc": "^11.4.1",
        "unit.js": "2.0.0"
    },
    "scripts": {
        "start": "node dist/index.js",
        "dev": "nodemon ./index.js --exec babel-node",
        "build": "babel src -d dist --copy-files",
        "serve": "NODE_ENV=production node --prof dist/index.js",
        "test": "cross-env NODE_ENV=test node_modules/.bin/nyc --reporter=text mocha --recursive",
        "test-dev": "cross-env NODE_ENV=test node_modules/.bin/nyc --reporter=text mocha --recursive --watch test/**/*.js",
        "cover": "cross-env NODE_ENV=test node_modules/.bin/nyc report --reporter=text-summary",
        "api": "sam local start-api"
    },
    "eslintConfig": {
        "env": {
            "node": true,
            "mocha": true
        }
    }
}
